{
	"name": "trial",
	"authors": [
		"Szabo Bogdan"
	],
	"description": "The extensible test runner for DLang",
	"copyright": "Copyright Â© 2017, Szabo Bogdan",
	"license": "MIT",
	"homepage": "http://trial.szabobogdan.com/",

	"dependencies": {
		"trial:lifecycle": "*"
	},

	"configurations": [
		{ "name": "executable",
			"dependencies": {
				"trial:runner": "*"
			}
		},

		{
			"name": "trial",
			"targetType": "executable",
			"excludedSourceFiles": ["source/app.d", "runner/app.d"],
			"sourcePaths": ["lifecycle", "runner"],
			"stringImportPaths": ["lifecycle/trial"],
			"mainSourceFile": "generated.d",
			"buildOptions": ["unittests", "debugMode", "debugInfo"],

			"dependencies": {
				"arsd-official:terminal": "~>1.2.1",
				"dub": "~>1.4.1",
				"fluent-asserts": "*"
			}
		}
	],

	"subPackages": [
		{
			"name": "lifecycle",
			"targetType": "library",
			"sourcePaths": ["lifecycle"],
			"importPaths": ["lifecycle"],
			"dependencies": {
				"arsd-official:terminal": "~>1.2.1",
				"fluent-asserts": "~>0.6.0"
			}
		},
		{
			"name": "runner",
			"targetType": "executable",
			"targetName": "trial",
			"sourcePaths": ["runner"],
			"importPaths": ["runner"],
			"stringImportPaths": ["lifecycle/trial"],

			"dependencies": {
				"dub": "~>1.4.1",
				"trial:lifecycle": "*",
				"fluent-asserts": "*",
				"arsd-official:terminal": "~>1.2.1"
			},
		}
	]
}
